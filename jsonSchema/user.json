{
    "type": "object",
    "x-documentConfig": {
        "documentName": "user",
        "documentType": "primary",
        "interfaceName": "User",
        "keyPrefix": "user",
        "method": [
            "get",
            "post",
            "put",
            "patch",
            "delete"
        ]
    },
    "properties": {
        "_id"           : { "type": "string", "format": "uuid", "index": true },
        "affiliateId"   : { "type": "string", "format": "uuid", "x-foreignKey": "affiliate", "index": true },
        "name"          : { "type": "string", "maxLength": 64 },
        "referBy"       : { "type": "integer" },
        "email"         : { "type": "string", "format": "email", "index": true, "maxLength": 64 },
        "pass"          : { "type": "string", "maxLength": 255 },
        "otp"           : { "type": "object", "properties": {
            "code"          : { "type": "number", "maxLength": 6},
            "expired"       : { "type": "integer", "x-format": "timestamp"}
        }},

        "isActive"  : { "type": "boolean", "default": true },
        "isDeleted" : { "type": "boolean", "default": false },
        "created"   : { "type": "integer", "x-format": "timestamp", "x-createValue": "dateNow" },
        "createdBy" : { "type": "string", "format": "uuid", "x-foreignKey": ["admin"] },
        "updated"   : { "type": "integer", "x-format": "timestamp", "x-updateValue": "dateNow" },
        "updatedBy" : { "type": "string", "format": "uuid", "x-foreignKey": [ "admin" ]}
    },
    "required": [
        "_id",
        "name",
        "email",
        "pass",
        "status"
    ],
    "additionalProperties": false
}