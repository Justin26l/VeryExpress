{
    "type": "object",
    "x-documentConfig": {
        "documentName": "user",
        "interfaceName": "User",
        "methods": [
            "get",
            "post",
            "patch",
            "delete"
        ]
    },
    "properties": {
        "_id": {
            "type": "string",
            "format": "uuid",
            "index": true
        },
        "name": {
            "type": "string",
            "maxLength": 64,
            "index": true
        },
        "userContact": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uuid",
                "x-foreignKey": "usercontact"
            }
        },
        "married": {
            "type": "string",
            "enum": [
                "single",
                "inRelationship",
                "married"
            ]
        },
        "userAddress": {
            "type": "object",
            "properties": {
                "line1": {
                    "type": "string",
                    "required": false
                },
                "line2": {
                    "type": "string",
                    "required": false
                },
                "city": {
                    "type": "string",
                    "required": true
                },
                "state": {
                    "type": "string",
                    "required": true
                },
                "country": {
                    "type": "string",
                    "enum": [
                        "Option1",
                        "Option2",
                        "Option3"
                    ],
                    "required": true
                },
                "zip": {
                    "type": "string",
                    "required": true
                }
            },
            "required": [
                "city",
                "state",
                "country",
                "zip"
            ]
        },
        "isActive": {
            "type": "boolean"
        },
        "created": {
            "type": "number",
            "x-format": "timestamp"
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "isActive",
        "created"
    ]
}