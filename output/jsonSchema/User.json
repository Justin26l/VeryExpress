{
    "type": "object",
    "x-documentConfig": {
        "documentName": "user",
        "interfaceName": "User",
        "methods": [
            "get",
            "post",
            "patch",
            "delete"
        ]
    },
    "properties": {
        "_id": {
            "type": "string",
            "index": true
        },
        "name": {
            "type": "string",
            "maxLength": 64,
            "index": true
        },
        "userContact": {
            "type": "array",
            "items": {
                "type": "object",
                "x-foreignKey": "usercontact",
                "properties": {
                    "contactType": {
                        "type": "string",
                        "enum": [
                            "mobile",
                            "home",
                            "office"
                        ]
                    },
                    "_id": {
                        "type": "string"
                    }
                }
            }
        },
        "married": {
            "type": "string",
            "required": true,
            "enum": [
                "single",
                "inRelationship",
                "married"
            ]
        },
        "userAddress": {
            "type": "object",
            "properties": {
                "line1": {
                    "type": "string",
                    "required": true
                },
                "line2": {
                    "type": "string"
                },
                "city": {
                    "type": "string",
                    "required": true
                },
                "state": {
                    "type": "string",
                    "required": true
                },
                "country": {
                    "type": "string",
                    "required": true,
                    "enum": [
                        "Option1",
                        "Option2",
                        "Option3"
                    ]
                },
                "zip": {
                    "type": "string"
                }
            }
        },
        "isActive": {
            "type": "boolean"
        },
        "created": {
            "type": "number",
            "x-format": "timestamp"
        }
    },
    "additionalProperties": false

}